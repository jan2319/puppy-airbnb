<%= simple_form_for [@puppy] do |f| %>
  <%= f.input :title, label: "Title of your offer" %>
  <%= f.input :name, label: "Name of Puppy" %>
  <p><strong>Describe your puppy*</strong></p>
  <%= f.input_field :description %>
  <%= f.input :street %>
  <%= f.input :zipcode %>
  <%= f.input :city %>
  <%= f.input :country, as: :string %>
  <%= f.input :daily_price, label: "Daily Price in Euro-Cent" %>
  <%= f.input :birthdate, as: :datetime, start_year: Date.today.year,
                              end_year: Date.today.year + 3, discard_hour: true,
                              order: [:day, :month, :year] %>
  <%= f.input :toilet_training_level, label: "Toilet Training Level - From 1: Pees everywhere to 5: Clean" %>
  <%= f.association :breed, include_hidden: false %>
  <%= f.input :photo_url %>

  <%= f.submit "Save Puppy", class: "btn btn-primary" %>
<% end %>

