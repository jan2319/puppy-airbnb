<div class="container">

<h2>My Bookings</h2>

  <% @bookings.each do |booking| %>
    <% if booking.confirmed %>
    <% @printed = true %>
      <%= link_to puppy_booking_path(booking.puppy, booking) do %>
        <div class="card-puppy">
          <h4>Your booking of <%= booking.puppy.name %></h4>
          <ul>
            <li><%= booking.start_date %></li>
            <li> <%= booking.end_date %></li>
            <li> <%= booking.total_price/100 %>,00â‚¬</li>



            <li>
              <%= link_to "Add a Review", new_booking_review_path(booking) %>
            </li>

          </ul>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <% if !@printed %>
    <h3>Sorry, you do not have any confirmed bookings, yet.</h3>
  <% end %>
</div>
