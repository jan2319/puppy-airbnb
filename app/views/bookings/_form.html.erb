<%= simple_form_for [@puppy, @booking] do |f| %>
  <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>

  <%= hidden_field_tag 'total_price', @puppy.daily_price %>
  <p>Price per Day: <%= number_with_precision((@puppy.daily_price.to_f / 100).round(2), precision: 2) %> â‚¬</p>

  <%= f.submit "Book Now", class: "btn btn-lg btn-primary" %>
<% end %>

